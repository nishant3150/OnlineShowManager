<p id="notice"><%= notice %></p>

<h1>Seasons</h1>
<h3><%= link_to 'Home', users_path %></h3>

<table>
  <% @seasons.each do |season| %>
    <tr>
      <td>SEASON</td>
      <td><%= season.title %></td>
      <td><%= season.plot %></td>
      <td><%= season.hd_price %></td>
      <td><%= link_to 'Buy', :controller => "seasons", :action => "purchase", :id => season.id, :type => VideoQuality::HD %></td>
      <td><%= season.sd_price %></td>
      <td><%= link_to 'Buy', :controller => "seasons", :action => "purchase", :id => season.id, :type => VideoQuality::SD %></td>
    </tr>
    <tr>
      <table>
        <thead>
          <tr>
            <th>Type</th>
            <th>Title</th>
            <th colspan="5">Episode No</th>
          </tr>
        </thead>
        <tbody>
          <% season.episodes.each do |episode| %>
            <tr>
              <td>Episode</td>
              <td><%= episode.title %></td>
              <td><%= episode.episode_number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <tr>
    <tr>
      <td><br><br></td>
    <tr>
  <% end %>
</table>

<br>